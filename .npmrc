# Ensure exact versions are installed
save-exact=true

# Use package-lock.json
package-lock=true

# Use the same node version as specified in package.json
engine-strict=true

# Use the same npm version across all environments
npm-version=10.2.4

# Use the same registry
registry=https://registry.npmjs.org/

# Prevent package-lock.json from being modified
lockfile=true 