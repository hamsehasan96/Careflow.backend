# Application Configuration
NODE_ENV=development
PORT=3001
API_VERSION=1.0.0
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/careflow
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=careflow
DB_DIALECT=postgres
DB_PROTOCOL=postgres
DB_SSL=false

# Security Configuration
JWT_SECRET=development_jwt_secret
WORKER_API_KEY=development_worker_key
CSRF_SECRET=development_csrf_secret
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
API_RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5
WORKER_RATE_LIMIT_MAX=50

# Monitoring Configuration
SENTRY_DSN=

# File Upload Configuration
MAX_FILE_SIZE=10mb

# Database Management
AUTO_MIGRATE=false
SEED_DATABASE=false

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@careflow.com

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_aws_s3_bucket

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://careflow-backend.onrender.com
NEXTAUTH_URL=https://careflow-frontend.vercel.app
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXT_PUBLIC_STORAGE_URL=https://storage.careflow.com

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
